<div class="posts-wrapper row">
  <div class="post">
    <div class="post-head">
      <div class="name">
        <%= @post.user.user_name %>
      </div>
    </div>
    <div class="image center-block">
      <%= image_tag @post.image, class:'img-responsive' %>
    </div>
    <p class="caption">
      <%= @post.caption %>
    </p>
    <div class="text-center edit-links">
    <%= link_to "Cancel", posts_path %>
      |
      <%= link_to "Edit Post", edit_post_path(@post) %>
    </div>

  </div>
</div>
